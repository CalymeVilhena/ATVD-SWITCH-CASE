#include <stdio.h> 
	int main(){
		float tempmanha,temptarde,tempnoite;
			printf("Temperatura manha: ");
			scanf("%f",&tempmanha);
			printf("Temperatura tarde: ");
			scanf("%f",&temptarde);
			printf("Temperatura noite: ");
			scanf("%f",&tempnoite);			
		float Maior,Menor,Media;
		
			if(tempmanha>=temptarde && tempmanha>=tempnoite){
				Maior=tempmanha;
			}else if(temptarde>=tempmanha && temptarde>=tempnoite){
				Maior= temptarde;
			}else if(tempnoite>=tempmanha && tempnoite>=temptarde){
				Maior = tempnoite;
			}if(tempmanha<=temptarde && tempmanha<=tempnoite){
				Menor = tempmanha;
			}else if(temptarde<=tempmanha && temptarde<=tempnoite){
				Menor = temptarde;
			}else if(tempnoite<=tempmanha && tempnoite<=temptarde){
				Menor = tempnoite;
			}
			if(tempmanha != Maior && tempmanha!= Menor){
					Media=tempmanha;
			}else if(temptarde != Maior && temptarde != Menor){
					Media=temptarde;
			}else if(tempnoite != Maior && tempnoite!= Menor){
					Media=tempnoite;
			}
		printf("%.2f , %.2f, %.2f",Menor,Media,Maior);
			
	}
